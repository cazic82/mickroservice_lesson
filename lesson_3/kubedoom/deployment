apiVersion: apps/v1
kind: Deloyment
metadata:
  name: kubedoom-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: my-app
  template:
    metadata:
      labels:
        app: my-app
        role: rolling-update
    spec:
      containers:
      - image: storaxdev/kubedoom:0.5.0
        name: kubedoom
        hostNetwork: true
        serviceAccountName: kubedoom
        ports:
        - containerPort: 5900
          protocol: TCP
strategy:
    type: RollingUpdate
    rollingUp      maxSurge: 50%